# +---------------+ #
#  LOAD MATERIALS  #
# +---------------+ #

/gate/geometry/setMaterialDatabase       ./GateMaterials.db


# +-----------------+ #
# |  P H A N T O M  | #
# +-----------------+ #


# +-------------------------+ #
# |  E L E C T R O N I C S  | #
# +-------------------------+ #


/control/alias      readout_depth       4
/control/alias      energy_resolution   0.2
/control/alias      time_resolution   0.09 ns


